<h2 class="mb-4">Заявки пользователя</h2>

<div class="mb-3">
  <a href="/users" class="btn btn-secondary">Назад к списку пользователей</a>
</div>

{{#if requests.length}}
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Название товара</th>
      <th>Количество</th>
      <th>Цена</th>
      <th>Ссылка</th>
      <th>Желаемая дата</th>
      <th>Статус</th>
      <th>Дата поставки</th>
      <th>Комментарий</th>
    </tr>
  </thead>
  <tbody>
    {{#each requests}}
    <tr>
      <td>{{this.title}}</td>
      <td>{{this.quantity}}</td>
      <td>{{this.price}}</td>
      <td><a href="{{this.link}}" target="_blank">Ссылка</a></td>
      <td>{{this.desired_date}}</td>
      <td>{{this.status}}</td>
      <td>{{this.delivery_date}}</td>
      <td>{{this.comment}}</td>
    </tr>
    {{/each}}
  </tbody>
</table>
{{else}}
<div class="alert alert-info">
  У этого пользователя нет активных заявок.
</div>
{{/if}}